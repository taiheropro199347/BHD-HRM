@page "/pages/authentication/Login-v2"
@layout EmptyLayout
<MRow Class="max-height ma-0">
    <MCol Md=5 Sm=12 Class="neutral-lighten-5">
        <image class="ml-12 mt-12" style="height:86px;" src="/img/mainLayout/logo-login.png"></image>
        <div class="d-flex pb-12" style="height: calc(100% - 268px);">
            <div style="width:686px;" class="ma-auto">
                <h3 class="neutral-lighten-1--text">BHD START CINEPLEX</h3>
                <image  width="680" class="mt-12" src="/img/login/logo.png"></image>
            </div>
        </div>
    </MCol>
    <MCol Md=7 Sm=12 Class="fill-lighten-1 block-center">
        <BHD_HRM.Pages.Authentication.Components.Login HideLogo
                                          Elevation="0"
                                          Width="500"
                                          CreateAccountRoute="pages/authentication/register-v2"
                                          ForgotPasswordRoute="pages/authentication/forgot-password-v2">
        </BHD_HRM.Pages.Authentication.Components.Login>	
        
	    <div style="position: fixed;bottom: 9px;right: 9px;">
                   <span class="neutral-lighten-1--text font-weight-bold">HRM - Made with<i class="fa fa-heart" style="font-size:24px;color:red"></i></span><br />
                   <span class="neutral-lighten-1--text font-weight-bold">Version: 1.0.0</span><br />
        </div>
    </MCol>
</MRow>

@code {
    [Inject]
    public NavigationManager Navigation { get; set; } = default!;

    public void Login(MouseEventArgs args)
    {
        Navigation.NavigateTo(Navigation.BaseUri);
    }
}
